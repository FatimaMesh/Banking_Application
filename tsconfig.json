{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES6",
    "rootDir": "./src",
    "outDir": "./public",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "include": ["./src"],
   "files": [
     "./src/index.ts",
     "./src/Bank.ts",
     "./src/Branch.ts",
     "./src/Customer.ts",
     "./src/Transaction.ts",
   ]
}
